{
  "name": "node-starter",
  "private": true,
  "version": "1.0.0",
  "description": "Node.js API starter.",
  "author": "Ayo Studios",
  "main": "index.js",
  "scripts": {
    "start:dev": "nodemon index.js",
    "start": "node index.js",
    "test": "NODE_ENV=test PORT=8081 nyc mocha --no-deprecation  --timeout 10000 --exit ./app/*/*.spec.js */*.test.js",
    "test:unit": "NODE_ENV=test PORT=8081 mocha --no-deprecation  --timeout 10000 --exit ./app/*/*.spec.js",
    "test:integration": "NODE_ENV=test PORT=8081 mocha --no-deprecation --timeout 10000 --exit */*.test.js"
  },
  "dependencies": {
    "bcrypt": "^3.0.0",
    "body-parser": "^1.18.3",
    "compression": "^1.7.3",
    "cors": "^2.8.4",
    "ejs": "^2.6.1",
    "express": "^4.16.3",
    "express-healthcheck": "^0.1.0",
    "express-jwt": "^5.3.1",
    "fs": "0.0.1-security",
    "jsonwebtoken": "^8.3.0",
    "mongoose": "^5.2.9",
    "morgan": "^1.8.1",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "passport-local-mongoose": "^5.0.1",
    "sinon": "^6.1.5",
    "sinon-chai": "^3.2.0",
    "sinon-express-mock": "^2.0.5"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "chai-http": "^4.0.0",
    "cross-env": "^5.1.4",
    "eslint": "^5.8.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "mocha": "^5.0.5",
    "mockgoose": "^7.3.5",
    "nodemon": "^1.18.3",
    "nyc": "^12.0.2"
  },
  "nyc": {
    "exclude": [
      "./app/*/*.spec.js",
      "*/*.test.js",
      "./app/server.js",
      "./app/config/index.js",
      "./app/utils/logger.js",
      "./app/utils/passport.js",
      "./app/utils/db.js"
    ]
  }
}
